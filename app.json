{
  "expo": {
    "name": "SubKeep",
    "slug": "Subscription-ai",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/icons/ios-dark.png",
    "scheme": "subkeep",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "googleServicesFile": "./GoogleService-Info.plist",
      "bundleIdentifier": "com.agbacoder.subkeep",
      "usesAppleSignIn": true,
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": ["remote-notification", "processing"],
        "BGTaskSchedulerPermittedIdentifiers": [
          "BACKGROUND-NOTIFICATION-TASK"
        ]
      },
      "icon": {
        "dark": "./assets/icons/ios-dark.png",
        "light": "./assets/icons/ios-light.png",
        "tinted": "./assets/icons/ios-tinted.png"
      }
    },
    "android": {
      "edgeToEdge": false, 
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/adaptive-icon.png",
        "monochromeImage": "./assets/icons/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "googleServicesFile": "./google-services.json",
       "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "SCHEDULE_EXACT_ALARM"
      ]
     
      },
      "navigationBar": {
        "visible": true,
        "backgroundColor": "#000000",
        "barStyle": "light-content"
      },
      "package": "com.agbacoder.subkeep"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/splash-icon-light.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/icons/splash-icon-dark.png",
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store",
      "expo-localization",
      "@react-native-google-signin/google-signin",
      "expo-sqlite",
      "expo-task-manager"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "20243795-a90c-40ec-9289-45b4d0cce93d"
      }
    },
    "owner": "agbacoder"
  }
}
